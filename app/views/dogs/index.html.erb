<div class="wrap">
    <div class="container mt-3">
        <div class="row">
            <% @dogs.each do |dog| %>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="dog-card">
                    <div class="dog-card-image" style="background-image: url('<%= dog.photo %>')"></div>
                    <div class="dog-card-content">
                        <div class="dog-card-title">
                            <h4><%= dog.name %></h4>
                        </div>
                        <p>
                            <%= dog.skill %>
                        </p>
                        <div class="flex">
                            <p><i class="fas fa-paw"></i>
                                <%= dog.breed %> <i class="fas fa-dollar-sign"></i>
                                <%= dog.fee %>
                            </p>
                        </div>
                    </div>
                    <div class="dog-card-actions">
                        <%= link_to 'Details', dog_path(dog) %>
                        <% if dog.user == current_user %>
                            <%= link_to 'Edit', edit_dog_path(dog), :class => "ml-3 text-warning" %>
                            <!--<a href="#" class="ml-3 text-danger">Remove</a>-->
                            <%= link_to 'Remove', dog_path(dog),
                                       method: :delete,
                                       data: { confirm: 'Are you sure?' },
                                       :class => "ml-3 text-danger" %>
                          <% end %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
